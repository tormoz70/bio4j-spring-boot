<?xml version="1.0" encoding="UTF-8"?>
<cursor xmlns="http://bio4j.ru/biodef-repo/store"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://bio4j.ru/biodef-repo/store http://bio4j.ru/biodef-repo/store/store-v11.xsd"
        multiselection="true">
    <SQL action="select">
        <text><![CDATA[
select *
from table(@cab4_sroom.current.vesion@.get_sroomact(:org_id))
where showrstat_id < 2
        ]]></text>

        <param type="integer" name="org_id"/>
    </SQL>

    <fields>
        <field name="showr_id" type="integer" attrName="showrId" header="ID зала" hidden="true" pk="1" />
        <field name="org_id" type="integer" attrName="orgId" header="ID кинотеатра"  hidden="true"/>
        <field name="actdate" type="date" header="Действует с" format="dd.MM.yyyy"/>
        <field name="sname" type="string" header="Название" width="150"/>

        <field name="srv_vendor" type="integer" attrName="srvVendor" hidden="true"/>
        <field name="srv_vendor_name" type="string" attrName="srvVendorName" header="Производитель сервера" width="150"/>
        <field name="srv_model" type="string" attrName="srvModel" header="Модель сервера" width="150"/>
        <field name="srv_serno" type="string" attrName="srvSerno" header="Серийный номер сервера" width="150"/>

        <field name="prj_vendor" type="integer" attrName="prjVendor" hidden="true"/>
        <field name="prj_vendor_name" type="string" attrName="prjVendorName" header="Производитель проектора" width="150"/>
        <field name="prj_model" type="string" attrName="prjModel" header="Модель проектора" width="150"/>
        <field name="prj_serno" type="string" attrName="prjSerno" header="Серийный номер проектора" width="150"/>

        <field name="explaser" type="boolean" header="LASER" width="50"/>
        <field name="exp_3d" type="boolean" attrName="exp3d" header="3D" width="50"/>
        <field name="exp_imax" type="boolean" attrName="expImax" header="IMAX" width="50"/>
        <field name="exp_4dx" type="boolean" attrName="exp4dx" header="4DX" width="50"/>
        <field name="exp_dvd" type="boolean" attrName="expDvd" header="DVD" width="50"/>
        <field name="exp_2dk1" type="boolean" attrName="exp2dk1" header="2DK1" width="50"/>
        <field name="exp_2dk2" type="boolean" attrName="exp2dk2" header="2DK2" width="50"/>
        <field name="exp_2dk4" type="boolean" attrName="exp2dk4" header="2DK3" width="50"/>
        <field name="exp_type" type="boolean" attrName="expType" header="Пленка" width="50"/>
        <field name="installdt" type="date" header="Дата установки" format="dd.MM.yyyy"/>
    </fields>
</cursor>